---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/astro/Header.astro";
import Footer from "../../components/astro/Footer.astro";

const websites = [
    // Own websites
    { 
        title: "Github Tutorial", 
        url: "https://s23010843.github.io/tutorial/github",
        category: "My Tutorials",
        icon: "fab fa-github",
        color: "text-gray-800"
    },
    { 
        title: "Python Tutorial", 
        url: "https://s23010843.github.io/tutorial/python",
        category: "My Tutorials",
        icon: "fab fa-python",
        color: "text-blue-600"
    },
    { 
        title: "JavaScript Tutorial", 
        url: "https://s23010843.github.io/tutorial/javascript",
        category: "My Tutorials",
        icon: "fab fa-js",
        color: "text-yellow-500"
    },
    { 
        title: "HTML Tutorial", 
        url: "https://s23010843.github.io/tutorial/html",
        category: "My Tutorials",
        icon: "fab fa-html5",
        color: "text-orange-600"
    },
    { 
        title: "CSS Tutorial", 
        url: "https://s23010843.github.io/tutorial/css",
        category: "My Tutorials",
        icon: "fab fa-css3-alt",
        color: "text-blue-500"
    },
    { 
        title: "Essential Monitor", 
        url: "https://s23010843.github.io/essential-monitor",
        category: "My Projects",
        icon: "fas fa-chart-line",
        color: "text-green-600"
    },
    // Third-party websites
    { 
        title: "Astro", 
        url: "https://astro.build",
        category: "Resources",
        icon: "fas fa-rocket",
        color: "text-purple-600"
    },
    { 
        title: "Tailwind CSS", 
        url: "https://tailwindcss.com",
        category: "Resources",
        icon: "fas fa-wind",
        color: "text-cyan-500"
    },
    { 
        title: "GitHub", 
        url: "https://github.com",
        category: "Resources",
        icon: "fab fa-github",
        color: "text-gray-800"
    },
    { 
        title: "Stack Overflow", 
        url: "https://stackoverflow.com",
        category: "Resources",
        icon: "fab fa-stack-overflow",
        color: "text-orange-500"
    },
    { 
        title: "MDN Web Docs", 
        url: "https://developer.mozilla.org",
        category: "Resources",
        icon: "fas fa-book",
        color: "text-indigo-600"
    },
];

// Group websites by category
const groupedWebsites = websites.reduce((acc, site) => {
    if (!acc[site.category]) {
        acc[site.category] = [];
    }
    acc[site.category].push(site);
    return acc;
}, {} as Record<string, typeof websites>);
---

<Layout title="Websites">
    <Header />
    <main class="mt-16 pt-6 pb-8 min-h-screen bg-gradient-to-br from-gray-50 via-white to-teal-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <!-- Card Grid View for Mobile/Tablet -->
            <div class="lg:hidden space-y-8 relative z-10">
                {Object.entries(groupedWebsites).map(([category, sites]) => (
                    <div>
                        <h2 class="text-2xl font-bold mb-4 text-gray-800 flex items-center gap-2">
                            <span class="w-1 h-8 bg-gradient-to-b from-teal-500 to-cyan-400 rounded-full"></span>
                            {category}
                        </h2>
                        <div class="grid gap-4 sm:grid-cols-2">
                            {sites.map((site) => (
                                <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-teal-200">
                                    <div class="p-6">
                                        <div class="flex items-start justify-between mb-3">
                                            <div class={`text-4xl ${site.color}`}>
                                                <i class={site.icon}></i>
                                            </div>
                                            <span class="px-2 py-1 text-xs font-medium text-teal-700 bg-teal-50 rounded-full">
                                                {site.category}
                                            </span>
                                        </div>
                                        <h3 class="text-lg font-bold text-gray-900 mb-2">
                                            {site.title}
                                        </h3>
                                        <a
                                            href={site.url}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="text-sm text-teal-600 hover:text-teal-700 font-medium break-all flex items-center gap-1 group"
                                        >
                                            <span>{site.url}</span>
                                            <i class="fas fa-external-link-alt text-xs opacity-0 group-hover:opacity-100 transition-opacity"></i>
                                        </a>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                ))}
            </div>

            <!-- Table View for Desktop -->
            <div class="hidden lg:block space-y-8 relative z-10">
                {Object.entries(groupedWebsites).map(([category, sites]) => (
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 relative z-10">
                        <div class="bg-gradient-to-r from-teal-500 via-cyan-400 to-blue-500 px-5 py-3">
                            <h2 class="text-lg font-bold text-white flex items-center gap-2">
                                <span class="text-xl">
                                    <i class={sites[0].icon}></i>
                                </span>
                                {category}
                            </h2>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead class="bg-gray-50 border-b border-gray-200">
                                    <tr>
                                        <th class="px-4 py-2.5 text-left text-xs font-semibold text-gray-600 uppercase tracking-wide">
                                            Website
                                        </th>
                                        <th class="px-4 py-2.5 text-left text-xs font-semibold text-gray-600 uppercase tracking-wide">
                                            URL
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100">
                                    {sites.map((site, index) => (
                                        <tr class="hover:bg-gradient-to-r hover:from-teal-50 hover:to-cyan-50 transition-all duration-200 group">
                                            <td class="px-4 py-3">
                                                <div class="flex items-center gap-2">
                                                    <span class={`text-lg group-hover:scale-110 transition-transform duration-200 ${site.color}`}>
                                                        <i class={site.icon}></i>
                                                    </span>
                                                    <span class="text-sm font-semibold text-gray-900">
                                                        {site.title}
                                                    </span>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3">
                                                <a
                                                    href={site.url}
                                                    target="_blank"
                                                    rel="noopener noreferrer"
                                                    class="text-xs text-teal-600 hover:text-teal-700 font-mono bg-gray-50 px-2 py-1 rounded group-hover:bg-teal-50 transition-colors inline-flex items-center gap-1.5 hover:underline"
                                                >
                                                    <span>{site.url}</span>
                                                    <i class="fas fa-external-link-alt text-xs"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    ))}
                                </tbody>
                            </table>
                        </div>
                    </div>
                ))}
            </div>

            <!-- Footer Stats -->
            <div class="mt-12 text-center">
                <div class="inline-flex items-center gap-2 px-6 py-3 bg-white rounded-full shadow-md border border-gray-100">
                    <span class="text-2xl">ðŸ“Œ</span>
                    <span class="text-gray-600 font-medium">
                        Total: <span class="font-bold text-teal-600">{websites.length}</span> websites
                    </span>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
