---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Chat | Custom Assistant">
  <section class="chat-page">
    <div class="chat-hero card">
      <div class="hero-top">
        <div class="pill">AI chatbot</div>
        <p class="eyebrow">Intelligent Development Assistant</p>
      </div>
      <h1>Chat with AI Assistant</h1>
      <p class="lede">
        Ask anything about this project, get help with deployments, or explore the codebase.
        Your intelligent assistant with full context about your repository.
      </p>
      <div class="hero-meta">
        <div class="meta-item">
          <span class="dot live"></span>
          <span>Real-time AI</span>
        </div>
        <div class="meta-item">
          <span class="dot live"></span>
          <span>AI Powered</span>
        </div>
      </div>
    </div>

    <div class="chat-shell card">
      <header class="chat-header">
        <div>
          <p class="eyebrow">AI Assistant</p>
          <h2>Project guide</h2>
          <p class="hint">Real AI that understands your codebase and can help with any question.</p>
        </div>
        <div class="status">
          <span class="dot live"></span>
          <span>Online</span>
        </div>
      </header>

      <div id="chat-body" class="chat-body" role="log" aria-live="polite" aria-label="Chat messages"></div>

      <div class="suggestions" aria-label="Quick prompts">
        <button type="button" data-suggestion>How do I get started with this project?</button>
        <button type="button" data-suggestion>What's the best way to deploy this?</button>
        <button type="button" data-suggestion>Explain the tech stack</button>
        <button type="button" data-suggestion>Help me troubleshoot build errors</button>
      </div>

      <form id="chat-form" class="chat-form" autocomplete="off">
        <input
          id="chat-input"
          name="message"
          type="text"
          placeholder="Ask something about this project..."
          aria-label="Message"
        />
        <button type="submit">Send</button>
      </form>
    </div>
  </section>
</Layout>

<script is:inline>
(() => {
  const body = document.getElementById('chat-body');
  const form = document.getElementById('chat-form');
  const input = document.getElementById('chat-input');
  const suggestionButtons = Array.from(document.querySelectorAll('[data-suggestion]'));
  const STORAGE_KEY = 'custom-chat-v1';

  let typing = false;
  let messages = loadMessages();

  function loadMessages() {
    try {
      const stored = localStorage.getItem(STORAGE_KEY);
      if (stored) return JSON.parse(stored);
    } catch (_) {
      // Ignore storage errors
    }
    return [
      {
        id: crypto.randomUUID ? crypto.randomUUID() : String(Date.now()),
        role: 'assistant',
        text: 'Hi! I\'m your AI assistant, powered by GPT-4. I can help you with anything related to this project—running, building, deploying, or understanding the codebase. What would you like to know?',
        ts: Date.now(),
      },
    ];
  }

  function persist() {
    try {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(messages));
    } catch (_) {
      // Ignore storage errors
    }
  }

  function render() {
    body.innerHTML = '';
    messages.forEach((msg) => {
      const item = document.createElement('article');
      // Handle both 'bot' and 'assistant' roles
      const role = msg.role === 'assistant' ? 'bot' : msg.role;
      item.className = `bubble ${role}`;

      const text = document.createElement('p');
      text.textContent = msg.text;
      item.appendChild(text);

      const meta = document.createElement('span');
      const date = new Date(msg.ts);
      meta.textContent = date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
      meta.className = 'timestamp';
      item.appendChild(meta);

      body.appendChild(item);
    });

    if (typing) {
      const typingEl = document.createElement('article');
      typingEl.className = 'bubble bot typing';
      typingEl.innerHTML = '<span></span><span></span><span></span>';
      body.appendChild(typingEl);
    }

    body.scrollTop = body.scrollHeight;
  }

  function addMessage(role, text) {
    messages = [
      ...messages,
      {
        id: crypto.randomUUID ? crypto.randomUUID() : String(Date.now()),
        role,
        text,
        ts: Date.now(),
      },
    ];
    persist();
    render();
  }

  async function getAIReply(userMessage) {
    try {
      // Use client-side chatbot model (works on GitHub Pages)
      const conversationHistory = messages.map(msg => ({
        role: msg.role === 'bot' ? 'assistant' : msg.role === 'assistant' ? 'assistant' : 'user',
        content: msg.text
      }));

      // Import chatbot dynamically for client-side execution
      try {
        const { default: ChatbotModel } = await import('/src/lib/chatbot-model.js');
        const chatbot = new ChatbotModel();
        
        const reply = chatbot.generateResponse(userMessage, conversationHistory);
        if (!reply || reply.trim().length === 0) {
          throw new Error('Empty response received');
        }
        return reply;
      } catch (importError) {
        console.error('Failed to load chatbot model:', importError);
        // Fallback response without the model
        return 'I\'m having trouble loading my response system. However, I can share some quick tips:\n\n• Run project: pnpm run dev\n• Build: pnpm run build\n• Check docs/ folder for guides\n\nPlease refresh the page and try again.';
      }
    } catch (error) {
      console.error('Chatbot error:', error);
      return `I encountered an error: ${error instanceof Error ? error.message : 'Unknown error'}. Please try again or refresh the page.`;
    }
  }

  async function handleSubmit(event) {
    event.preventDefault();
    const value = input.value.trim();
    if (!value || typing) return;

    // Validate message length
    if (value.length > 1000) {
      addMessage('bot', 'Message too long. Please keep it under 1000 characters.');
      return;
    }

    addMessage('user', value);
    input.value = '';
    input.disabled = true;

    typing = true;
    render();

    try {
      const reply = await getAIReply(value);
      typing = false;
      addMessage('bot', reply);
    } catch (error) {
      typing = false;
      addMessage('bot', 'Sorry, something went wrong. Please try again.');
      console.error('Error in handleSubmit:', error);
    } finally {
      input.disabled = false;
      input.focus();
    }
  }

  render();

  form.addEventListener('submit', handleSubmit);

  suggestionButtons.forEach((button) => {
    button.addEventListener('click', () => {
      input.value = button.textContent || '';
      input.focus();
      form.dispatchEvent(new Event('submit'));
    });
  });
})();
</script>

<style>
  .chat-page {
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
    padding: 40px 20px 180px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .card {
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    background: radial-gradient(circle at 20% 20%, rgba(99, 102, 241, 0.15), transparent 40%),
      radial-gradient(circle at 80% 80%, rgba(168, 85, 247, 0.15), transparent 40%),
      linear-gradient(135deg, rgba(15, 23, 42, 0.95), rgba(30, 41, 59, 0.95));
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.05) inset;
    backdrop-filter: blur(20px);
    position: relative;
    overflow: hidden;
  }

  .card::before {
    content: '';
    position: absolute;
    inset: -100%;
    background: conic-gradient(from 180deg at 50% 50%, rgba(99, 102, 241, 0) 0deg, rgba(139, 92, 246, 0.1) 180deg, rgba(99, 102, 241, 0) 360deg);
    animation: rotate 20s linear infinite;
    pointer-events: none;
  }

  @keyframes rotate {
    100% { transform: rotate(360deg); }
  }

  .chat-hero {
    padding: 32px;
    display: grid;
    gap: 16px;
    position: relative;
    z-index: 1;
  }

  .chat-hero h1 {
    font-size: clamp(32px, 5vw, 48px);
    color: #f1f5f9;
    margin: 0;
    font-weight: 800;
    background: linear-gradient(135deg, #f1f5f9, #c7d2fe, #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 40px rgba(167, 139, 250, 0.3);
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { filter: brightness(1); }
    50% { filter: brightness(1.2); }
  }

  .chat-hero .lede {
    color: #c4d5f5;
    max-width: 780px;
  }

  .hero-top {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .pill {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6, #a855f7);
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
    color: #ffffff;
    padding: 10px 18px;
    border-radius: 999px;
    font-weight: 700;
    letter-spacing: 0.03em;
    box-shadow: 0 4px 20px rgba(139, 92, 246, 0.4), 0 0 30px rgba(139, 92, 246, 0.2);
    font-size: 13px;
    position: relative;
    overflow: hidden;
  }

  .pill::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
    transform: translateX(-100%);
    animation: shine 3s infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes shine {
    100% { transform: translateX(100%); }
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 12px;
    color: #8fb3ff;
    margin: 0;
  }

  .hero-meta {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    color: #bcd2ff;
  }

  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 16px;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: default;
  }

  .meta-item:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(139, 92, 246, 0.3);
    box-shadow: 0 4px 20px rgba(139, 92, 246, 0.2);
    transform: translateY(-2px);
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    display: inline-block;
  }

  .dot.live {
    background: #10b981;
    box-shadow: 0 0 16px rgba(16, 185, 129, 0.8), 0 0 4px rgba(16, 185, 129, 1);
    animation: pulse-glow 2s infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.1); opacity: 0.8; }
  }

  .dot.offline {
    background: #f59e0b;
    box-shadow: 0 0 12px rgba(245, 158, 11, 0.6);
  }

  .chat-shell {
    padding: 24px;
    display: grid;
    gap: 18px;
    position: relative;
    z-index: 1;
  }

  .chat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
    padding-bottom: 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .chat-header h2 {
    margin: 6px 0;
    color: #f1f5f9;
    font-size: 24px;
    font-weight: 700;
  }

  .chat-header .hint {
    color: #c4d5f5;
    margin: 0;
  }

  .status {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 18px;
    border-radius: 999px;
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(5, 150, 105, 0.15));
    border: 1px solid rgba(16, 185, 129, 0.3);
    color: #d7e7ff;
    font-weight: 600;
    font-size: 14px;
  }

  .chat-body {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.8), rgba(30, 41, 59, 0.8));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 20px;
    max-height: 520px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 16px;
    position: relative;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3) inset;
  }

  .chat-body::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 0%, rgba(99, 102, 241, 0.08), transparent 50%);
    pointer-events: none;
    border-radius: 20px;
  }

  .chat-body::-webkit-scrollbar {
    width: 8px;
  }

  .chat-body::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    margin: 8px 0;
  }

  .chat-body::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, rgba(139, 92, 246, 0.6), rgba(99, 102, 241, 0.6));
    border-radius: 10px;
    border: 2px solid transparent;
    background-clip: padding-box;
  }

  .chat-body::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, rgba(139, 92, 246, 0.8), rgba(99, 102, 241, 0.8));
    background-clip: padding-box;
  }

  .bubble {
    max-width: 80%;
    padding: 14px 18px;
    border-radius: 18px;
    position: relative;
    display: inline-flex;
    flex-direction: column;
    gap: 8px;
    line-height: 1.6;
    font-size: 15px;
    animation: slideInMessage 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    transition: all 0.2s ease;
  }

  .bubble::before {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0.5;
  }

  @keyframes slideInMessage {
    from {
      opacity: 0;
      transform: translateY(15px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .bubble.bot {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.9), rgba(139, 92, 246, 0.9));
    border: 1px solid rgba(255, 255, 255, 0.15);
    align-self: flex-start;
    color: #ffffff;
    box-shadow: 0 4px 20px rgba(99, 102, 241, 0.35), 0 0 0 1px rgba(255, 255, 255, 0.1) inset, 0 8px 32px rgba(99, 102, 241, 0.2);
    border-radius: 18px 18px 18px 4px;
  }

  .bubble.bot:hover {
    box-shadow: 0 6px 30px rgba(99, 102, 241, 0.45), 0 0 0 1px rgba(255, 255, 255, 0.15) inset, 0 12px 40px rgba(99, 102, 241, 0.3);
    transform: translateY(-2px);
  }

  .bubble.user {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.9), rgba(5, 150, 105, 0.9));
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: #ffffff;
    margin-left: auto;
    box-shadow: 0 4px 20px rgba(16, 185, 129, 0.35), 0 0 0 1px rgba(255, 255, 255, 0.1) inset, 0 8px 32px rgba(16, 185, 129, 0.2);
    border-radius: 18px 18px 4px 18px;
  }

  .bubble.user:hover {
    box-shadow: 0 6px 30px rgba(16, 185, 129, 0.45), 0 0 0 1px rgba(255, 255, 255, 0.2) inset, 0 12px 40px rgba(16, 185, 129, 0.3);
    transform: translateY(-2px);
  }

  .bubble.typing {
    display: inline-flex;
    gap: 5px;
    padding: 16px 20px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.85), rgba(139, 92, 246, 0.85));
  }

  .bubble.typing span {
    width: 9px;
    height: 9px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.9);
    animation: blink 1.1s infinite;
    box-shadow: 0 2px 8px rgba(255, 255, 255, 0.3);
  }

  .bubble.typing span:nth-child(2) {
    animation-delay: 0.2s;
  }

  .bubble.typing span:nth-child(3) {
    animation-delay: 0.4s;
  }

  .timestamp {
    font-size: 11px;
    opacity: 0.75;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
  }

  .suggestions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 10px;
  }

  .suggestions button {
    padding: 12px 16px;
    border-radius: 14px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.08), rgba(139, 92, 246, 0.08));
    color: #e2e8f0;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    font-weight: 500;
    font-size: 14px;
    position: relative;
    overflow: hidden;
  }

  .suggestions button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(99, 102, 241, 0.2));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .suggestions button:hover::before {
    opacity: 1;
  }

  .suggestions button:hover {
    transform: translateY(-3px);
    border-color: rgba(139, 92, 246, 0.6);
    box-shadow: 0 12px 30px rgba(139, 92, 246, 0.3), 0 0 0 1px rgba(139, 92, 246, 0.3) inset;
  }

  .suggestions button:active {
    transform: translateY(-1px);
  }

  .chat-form {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .chat-form input {
    flex: 1;
    padding: 16px 20px;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.06);
    color: #f1f5f9;
    font-size: 15px;
    transition: all 0.3s ease;
  }

  .chat-form input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .chat-form input:focus {
    outline: none;
    border-color: rgba(139, 92, 246, 0.6);
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.15), 0 8px 25px rgba(139, 92, 246, 0.2);
    transform: translateY(-1px);
  }

  .chat-form button {
    padding: 16px 28px;
    border-radius: 16px;
    border: none;
    background: linear-gradient(135deg, #6366f1, #8b5cf6, #a855f7);
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
    color: #ffffff;
    font-weight: 700;
    cursor: pointer;
    box-shadow: 0 8px 25px rgba(139, 92, 246, 0.4), 0 0 30px rgba(139, 92, 246, 0.2);
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    font-size: 15px;
    position: relative;
    overflow: hidden;
  }

  .chat-form button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
    transform: translateX(-100%);
  }

  .chat-form button:hover::before {
    animation: shine-button 0.8s;
  }

  @keyframes shine-button {
    100% { transform: translateX(100%); }
  }

  .chat-form button:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(139, 92, 246, 0.6), 0 0 50px rgba(139, 92, 246, 0.3);
  }

  .chat-form button:active {
    transform: translateY(-1px);
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 0.5;
    }
    50% {
      opacity: 1;
    }
  }

  @media (max-width: 720px) {
    .chat-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .bubble {
      max-width: 100%;
    }

    .chat-page {
      padding: 24px 14px 160px;
    }
  }
</style>
