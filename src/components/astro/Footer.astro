---
// No props needed for now
---

<footer class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <!-- Brand Section -->
            <div>
                <div class="flex items-center gap-2 mb-4">
                    <div class="w-10 h-10 bg-gradient-to-br from-teal-500 to-cyan-400 rounded-lg flex items-center justify-center shadow-lg">
                        <i class="fas fa-home text-white text-lg"></i>
                    </div>
                    <span class="text-2xl font-bold">Official</span>
                </div>
                <p class="text-gray-400 text-sm leading-relaxed">
                    A curated collection of tutorials, projects, and useful resources for developers.
                </p>
            </div>

            <!-- Quick Links -->
            <div>
                <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                    <i class="fas fa-link text-teal-400"></i>
                    Quick Links
                </h3>
                <ul class="space-y-2">
                    <li>
                        <a href="/" class="text-gray-400 hover:text-teal-400 transition-colors flex items-center gap-2">
                            <i class="fas fa-angle-right text-xs"></i>Home
                        </a>
                    </li>
                    <li>
                        <a href="/websites" class="text-gray-400 hover:text-teal-400 transition-colors flex items-center gap-2">
                            <i class="fas fa-angle-right text-xs"></i>Websites
                        </a>
                    </li>
                    <li>
                        <a href="/chat" class="text-gray-400 hover:text-teal-400 transition-colors flex items-center gap-2">
                            <i class="fas fa-angle-right text-xs"></i>Chat
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Social Links -->
            <div>
                <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                    <i class="fas fa-share-alt text-teal-400"></i>
                    Connect
                </h3>
                <div class="flex gap-3">
                    <a 
                        href="https://github.com/s23010843" 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="w-10 h-10 bg-gray-700 hover:bg-teal-500 rounded-lg flex items-center justify-center transition-all hover:scale-110 hover:shadow-lg hover:shadow-teal-500/50"
                        aria-label="GitHub"
                    >
                        <i class="fab fa-github text-lg"></i>
                    </a>
                    <a 
                        href="https://stackoverflow.com" 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="w-10 h-10 bg-gray-700 hover:bg-orange-500 rounded-lg flex items-center justify-center transition-all hover:scale-110 hover:shadow-lg hover:shadow-orange-500/50"
                        aria-label="Stack Overflow"
                    >
                        <i class="fab fa-stack-overflow text-lg"></i>
                    </a>
                    <a 
                        href="https://twitter.com" 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="w-10 h-10 bg-gray-700 hover:bg-blue-500 rounded-lg flex items-center justify-center transition-all hover:scale-110 hover:shadow-lg hover:shadow-blue-500/50"
                        aria-label="Twitter"
                    >
                        <i class="fab fa-twitter text-lg"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-gray-700 pt-8 flex flex-col sm:flex-row items-center justify-between gap-4">
            <p class="text-gray-400 text-sm text-center sm:text-left">
                &copy; <span id="current-year">{new Date().getFullYear()}</span> Official. All Rights Reserved.
            </p>
            <div class="flex items-center gap-4 text-sm text-gray-400">
                <a href="#" class="hover:text-teal-400 transition-colors">Privacy Policy</a>
                <span>â€¢</span>
                <a href="#" class="hover:text-teal-400 transition-colors">Terms of Service</a>
            </div>
        </div>
    </div>
</footer>

<script>
    // Update year dynamically
    const yearElement = document.getElementById('current-year');
    if (yearElement) {
        yearElement.textContent = new Date().getFullYear().toString();
    }
</script>
